<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", id: "user_email", placeholder: "Your email", autofocus: true %>
  </div>
<div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Your password" %>
  </div>  
  <%= f.submit "Log In", class: "btn btn-block btn-default" %>  
<% end %>  
<br>
<p>Don't have an account? <%= link_to "Click here", signup_path %> to sign up.</p>